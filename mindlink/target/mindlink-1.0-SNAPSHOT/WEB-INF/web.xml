<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>MindLink Mental Health Platform</display-name>

    <!-- Spring Boot uses ServletInitializer to configure DispatcherServlet automatically -->
    <!-- No manual servlet configuration needed for Spring Boot -->

    <!-- Session Timeout (Optional) -->
    <!-- Logs the user out automatically after 30 minutes of inactivity -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Welcome File List -->
    <!-- If someone hits the root URL and Spring doesn't catch it, try index.jsp -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>