<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>MindLink Mental Health Platform</display-name>

    <!-- 1. The Front Controller (Spring DispatcherServlet) -->
    <!-- This handles all requests and routes them to your specific Modules -->
    <servlet>
        <servlet-name>mindlink-dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <!-- In Spring Boot, we don't need init-param for contextConfigLocation 
             because the main Application class handles it. -->
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- 2. Mapping -->
    <!-- Map everything (/) to the Spring Dispatcher -->
    <servlet-mapping>
        <servlet-name>mindlink-dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- 3. Session Timeout (Optional) -->
    <!-- Logs the user out automatically after 30 minutes of inactivity -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- 4. Welcome File List -->
    <!-- If someone hits the root URL and Spring doesn't catch it, try index.jsp -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>